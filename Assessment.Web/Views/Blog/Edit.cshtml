@model Assessment.Web.Models.BlogViewModel;
@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    
   <form asp-action="onPostEdit">
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <input asp-for="Body" class="form-control" required/>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="form-group">
                Author Name:<select name="AuthorId" asp-for="AuthorId"
                    asp-items="@(new SelectList(ViewBag.authors, "AuthorID", "FullName"))"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" type="date" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to Blog List</a>
        </div>
</div>
